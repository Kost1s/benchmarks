set -euxo pipefail

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"

source "${DIR}/../remote-benchmarks-runner"

function start_media_driver()
{
  local executable=${1}
  local wrapper_script=${2}
  local driver_pid
  local driver_thread

  if [[ "${executable}" =~ /media-driver$ ]]
  then
    driver_pid="$(await_java_process_start "io.aeron.driver.MediaDriver"); driver_pid=\${pid}"
    driver_thread="driver-conducto"
  elif [[ "${executable}" =~ /c-aeronmd-dpdk$ ]]
  then
    driver_pid="$(await_process_start "\$(pgrep -x '^aeronmd_dpdk\$')"); driver_pid=\${pid}"
    driver_thread="aeronmd_dpdk"
  else
    driver_pid="$(await_process_start "\$(pgrep -x '^aeronmd\$')"); driver_pid=\${pid}"
    driver_thread="aeronmd"
  fi

  local command=""
  command="$(stop_media_driver); \
  rm -rf /dev/shm/aeron; \
  ${wrapper_script} taskset -c ${3} \"${executable}\" & ${driver_pid}"

  command+="; echo \"driver PID=\${driver_pid}\""
  command+="; $(pin_thread \${driver_pid} "receiver" "${6}")"
  command+="; $(pin_thread \${driver_pid} "sender" "${5}")"
  command+="; $(pin_thread \${driver_pid} "${driver_thread}" "${4}")"

  echo ${command}
}

function stop_media_driver()
{
  echo "pkill -9 '^aeronmd'; $(kill_java_process "io.aeron.driver.MediaDriver")"
}
